{
  "name": "Claude Code Sandbox - RStudio",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "ms-toolsai.jupyter",
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "r.rterm.linux": "/usr/bin/R",
        "r.lsp.enabled": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory,target=/commandhistory,type=volume",
    "source=claude-code-config,target=/home/node/.claude,type=volume"
  ],
  "remoteEnv": {
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "R_LIBS_USER": "/home/node/R/library",
    "R_WORKDIR": "/workspace"
  },
  // Forward RStudio ports
  "forwardPorts": [
    8787
  ],
  "portsAttributes": {
    "8787": {
      "label": "Rstudio",
      "requireLocalPort": true,
      "onAutoForward": "ignore"
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "sudo /usr/local/bin/init-firewall.sh  > /tmp/firewall.log 2>&1",
  // Use 'postAttachCommand' to run commands after the container is started.
  "postAttachCommand": "sudo /usr/sbin/rstudio-server start"
}